{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./target",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "module": "esnext",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "src/core/*": ["../../src/core/*"],
      "@osd/*": ["../../src/plugins/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "../../typings",
      "./node_modules/@types",
      "."
    ],
    "types": ["node", "jest"]
  },
  "include": [
    "index.ts",
    "typings.d.ts",
    "opensearch-dashboards.d.ts",
    "common/**/*.ts",
    "common/**/*.tsx",
    "public/**/*.ts",
    "public/**/*.tsx",
    "server/**/*.ts",
    "server/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "target",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
